Unattended-Upgrade::Automatic-Reboot "{{ pi_auto_upgrade_reboot }}";
Unattended-Upgrade::Automatic-Reboot-Time "{{ pi_auto_upgrade_reboot_time }}";

// Raspberry Pi Foundation doesn't use a separate security upgrades channel.
Unattended-Upgrade::Origins-Pattern {
        "origin=Raspbian,codename=${distro_codename},label=Raspbian";
        "origin=Raspberry Pi Foundation,codename=${distro_codename},label=Raspberry Pi Foundation";
};

Unattended-Upgrade::Package-Blacklist{
{% for package in pi_auto_upgrade_blacklist %}
      "{{package}}";
{% endfor %}
}